# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True

# Project settings
PROJECT_NAME="FastAPI MVC Application"
PROJECT_DESCRIPTION="FastAPI application following MVC architecture with service layer"
PROJECT_VERSION="0.1.0"

# Database settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_mvc
DB_ECHO=False
AUTO_CREATE_TABLES=False

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Redis and Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Auth
JWT_SECRET_KEY=change_this_to_a_secure_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Development - Mailpit)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=False
SMTP_USE_SSL=False
EMAIL_FROM=noreply@gara-api.com
EMAIL_FROM_NAME=Gara API

# Email Configuration (Production - Example: Gmail)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True
# EMAIL_FROM=your-email@gmail.com
# EMAIL_FROM_NAME=Gara API

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6
